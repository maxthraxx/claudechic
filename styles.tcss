/* Claude Code Textual UI Styles - Minimal aesthetic */

/* Use terminal's default background */
Screen {
    background: $background;
}

/* Header/Footer - slight contrast from background */
Header {
    background: #111111;
}

Footer {
    background: #111111;
}

/* Messages */
ChatMessage {
    padding: 1 2;
    margin: 0;
}

ChatMessage.user-message {
    background: transparent;
    color: $text-muted;
    text-align: right;
    padding: 0 2 1 4;
}

ChatMessage.assistant-message {
    background: transparent;
    padding: 1 4 1 2;
}

/* Copy buttons - hidden until hover */
.copy-btn {
    dock: right;
    width: 3;
    min-width: 3;
    height: 1;
    background: transparent;
    border: none;
    color: transparent;
}

ChatMessage:hover .copy-btn {
    color: $text-muted;
}

.copy-btn:hover {
    color: $text;
}

/* Main layout */
#main {
    height: 1fr;
}

#sidebar {
    width: 30;
    background: $surface-darken-1;
    border-right: solid $surface-lighten-1;
}

#sidebar.hidden {
    display: none;
}

#sidebar > SessionItem {
    padding: 1;
    height: auto;
}

#sidebar > SessionItem:hover {
    background: $surface-lighten-1;
}

#chat-view {
    width: 1fr;
    padding: 0 1;
    background: $background;
}

#input {
    dock: bottom;
    margin: 1 2;
    height: auto;
    max-height: 10;
    min-height: 3;
    width: 100%;
    border: solid gray;
}

#input:focus {
    border: solid white;
}

Markdown {
    padding: 0;
    margin: 0;
}

/* Tool use widgets - minimal, indented */
ToolUseWidget {
    margin: 0 0 0 2;
    padding: 0;
}

.tool-copy-btn {
    dock: right;
    width: 3;
    min-width: 3;
    height: 1;
    background: transparent;
    border: none;
    color: transparent;
}

ToolUseWidget:hover .tool-copy-btn {
    color: $text-muted;
}

.tool-copy-btn:hover {
    color: $text;
}

ToolUseWidget Collapsible {
    background: transparent;
    border: none;
    padding: 0;
}

ToolUseWidget Collapsible.error {
    background: $error 10%;
}

ToolUseWidget Collapsible CollapsibleTitle {
    color: $text-muted;
    padding: 0 1;
    width: 100%;
}

ToolUseWidget Collapsible Contents {
    padding: 0 1;
}

#diff-content {
    color: $text;
}
